{
  "version": 2,
  "buildCommand": "pnpm install && pnpm run build",
  "installCommand": "pnpm install",
  "outputDirectory": "dist/spa",
  "framework": "vite",
  "env": {
    "JWT_SECRET": "@jwt_secret"
  },
  "envPrefix": "VITE_",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
